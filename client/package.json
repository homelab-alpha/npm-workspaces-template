    "format": "prettier --write src/",
    "lint": "eslint . --fix",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "test:unit": "vitest",
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "vue-tsc --build"
