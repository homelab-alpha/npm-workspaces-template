  "description": "A boilerplate for NPM Workspaces - client",
  "private": true,
  "type": "module",
  "packageManager": "^npm@10.9.3",
  "engines": {
    "node": "^22.17.0"
  },
  "scripts": {
    "build-only": "vite build",
    "build": "run-p type-check \"build-only {@}\" --",
    "dev": "vite",
