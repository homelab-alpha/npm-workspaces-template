{
  "name": "npm-workspaces-template",
  "version": "0.1.0",
  "description": "A boilerplate for NPM Workspaces. ",
  "private": true,
  "packageManager": "^npm@10.9.2",
  "engines": {
    "node": "22.17.0"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client:dev": "npm run dev --workspace=client",
    "client:build": "npm run build --workspace=client",
    "client:lint": "npm run lint --workspace=client",
    "client:format": "npm run format --workspace=client",
    "server:dev": "npm run dev --workspace=server",
    "server:start": "npm run start --workspace=server",
    "dev": "npm run client:dev & npm run server:dev",
    "build": "npm run client:build & npm run server:start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/homelab-alpha/npm-workspaces-template.git"
  },
  "author": "Homelab-Alpha <@gmail.com> ( GJS )",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/homelab-alpha/npm-workspaces-template/issues"
  },
  "homepage": "https://github.com/homelab-alpha/npm-workspaces-template#readme",
  "devDependencies": {
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13"
  },
  "lint-staged": {
    "*.css": "prettier --write --plugin=prettier-plugin-tailwindcss",
    "*.html": "prettier --write --plugin=prettier-plugin-tailwindcss",
    "*.js": "prettier --write",
    "*.json": "prettier --write",
    "*.ts": "prettier --write",
    "*.vue": "prettier --write --plugin=prettier-plugin-tailwindcss"
  }
}
